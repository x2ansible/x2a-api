# Generated by Chef - Webapp Configuration
server {
    listen 80;
    server_name <%= @server_name %>;
    root <%= @document_root %>;
    index <%= node['nginx']['webapp']['index_files'].join(' ') %>;

    <% if @ssl_enabled %>
    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri\;
}

server {
    listen 443 ssl http2;
    server_name <%= @server_name %>;
    root <%= @document_root %>;
    index <%= node['nginx']['webapp']['index_files'].join(' ') %>;

    # SSL Configuration
    ssl_certificate <%= node['nginx']['webapp']['ssl']['cert_file'] %>;
    ssl_certificate_key <%= node['nginx']['webapp']['ssl']['key_file'] %>;
    ssl_protocols <%= node['nginx']['webapp']['ssl']['protocols'] %>;
    ssl_ciphers <%= node['nginx']['webapp']['ssl']['ciphers'] %>;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options DENY always;
    add_header X-Content-Type-Options nosniff always;
    <% end %>

    # Main location
    location / {
        try_files $uri $uri/ =404;
    }

    # Static assets with long expiry
    location ~* \.(jpg|jpeg|png|gif|ico|css|js)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Security: Hide sensitive files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Logs
    access_log <%= node['nginx']['access_log'] %> combined;
    error_log <%= node['nginx']['error_log'] %> <%= node['nginx']['log_level'] %>;
}
